@{
    ViewData["Title"] = "Registration";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>@ViewData["Title"]</h1>

<div class="container d-flex flex-column justify-content-center align-items-center rounded-2 shadow-lg w-75">
    <div class="d-flex justify-content-center align-items-center m-4">
        <h2>Signup</h2>
    </div>
    <div class="d-flex justify-content-center align-items-center w-75">
        <div id="img" class="col-md-6 d-flex justify-content-center align-items-center">
            <img src="~/lib/imgs/img.svg" alt="Alternate Text" class="img-fluid pb-xl-5 mb-xl-5">
        </div>
        <div id="form" class="col-md-6 d-flex align-items-center justify-content-center">
            <form action="/" method="post" class="w-100 d-flex flex-column align-items-center justify-content-center">
                <div class="form-group m-2">
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter your full name">
                </div>

                <div class="form-group m-2">
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter email">
                </div>

                <div class="form-group m-2">
                    <input type="password" id="password" name="password" class="form-control" placeholder="Set password">
                </div>

                <div class="form-group m-2">
                    <input type="password" id="rePassword" name="rePassword" class="form-control" placeholder="Re-enter password">
                </div>

                <button type="submit" class="btn btn-danger btn-block text-center m-2 rounded"><b class="text-center">Submit</b></button>

                <p class="text-center mt-3">Already have an account? <a href="Login">Login here</a></p>
            </form>
        </div>
    </div>
</div>
