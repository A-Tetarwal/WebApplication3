@{
    ViewData["Title"] = "Registration";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-center align-items-center border p-4 rounded">
    <div id="img" style="height: 300px; width: 350px">
        <img src="~/lib/imgs/img.svg" alt="Alternate Text" class="w-100 h-100"/>
    </div>
    <form action="/" method="post" class="d-flex justify-content-center align-content-center flex-column ms-2">
        <label for="name" class="form-label">Name: </label>
        <input type='text' id="name" name="name" placeholder="Enter your full name" class="form-control form-control-sm mb-1" />

        <label for="email" class="form-label">Email: </label>
        <input type='email' id="email" name="email" placeholder="Enter email" class="form-control form-control-sm mb-1" />

<!--
        <label for="contact" class="form-label">Contact: </label>
                <input type='number' id="contact" name="contact" placeholder="Contact Number" class="form-control form-control-sm mb-1" />

-->
        <label for="password" class="form-label">Password: </label>
        <input type='password' id="password" name="password" placeholder="Set password" class="form-control form-control-sm mb-1" />

        <label for="password" class="form-label">Re-enter Password: </label>
        <input type='password' id="rePassword" name="rePassword" placeholder="Re-enter password" class="form-control form-control-sm mb-1" />

        <button type="submit" class=" text-white mt-2 border-0 rounded" style="background-color: #de1c47">Submit</button>

        <p> Already have account? <a href="Login">login here</a></p>

    </form>
</div>