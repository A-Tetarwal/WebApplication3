@model WebApplication3.Models.User

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="container d-flex flex-column justify-content-center align-items-center rounded-2 shadow-lg w-75">
    <div class="d-flex justify-content-center align-items-center m-4">
        <h2>Create User</h2>
    </div>
    <div class="d-flex justify-content-center align-items-center w-75">
        <div id="img" class="col-md-6 d-flex justify-content-center align-items-center">
            <img src="~/lib/imgs/img.svg" alt="Alternate Text" class="img-fluid pb-xl-5 mb-xl-5">
        </div>
        <div id="form" class="col-md-6 d-flex align-items-center justify-content-center">
            <form asp-action="Create" method="post" class="w-100 d-flex flex-column align-items-center justify-content-center">
                <div class="form-group m-2">
@*                     <label asp-for="UserName" class="control-label"></label>
 *@                    <input asp-for="UserName" class="form-control" placeholder="Enter your full name" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group m-2">
@*                     <label asp-for="Email" class="control-label"></label>
 *@                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group m-2">
                    @* <label asp-for="Password" class="control-label"></label> *@
                    <input asp-for="Password" type="password" class="form-control" placeholder="Set password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group m-2">
                    @* <label asp-for="Password" class="control-label"></label> *@
                    <input asp-for="Password" type="password" class="form-control" placeholder="Re-enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-danger btn-block text-center m-2 rounded"><b class="text-center">Submit</b></button>

                <p class="text-center mt-3">Already have an account? <a href="~/Login">Login here</a></p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
