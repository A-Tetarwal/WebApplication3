@model IEnumerable<WebApplication3.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="text-decoration-none bg-primary p-1 text-white rounded-2">+ Create New</a>
</p>
<table class="table border-1 rounded-3 shadow-lg">
    <thead>
        <tr class="bg-warning">
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="bg-primary text-white border-0 rounded-2 p-1 text-decoration-none">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="bg-success text-white border-0 rounded-2 p-1 text-decoration-none">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="bg-danger text-white border-0 rounded-2 p-1 text-decoration-none">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
